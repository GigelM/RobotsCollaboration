<?xml version="1.0"?>
<launch>
  <arg name="robot_name" default="pioneer1"/>

  <group ns="$(arg robot_name)">
    <param name="poz_x" value="-2" />
    <param name="poz_y" value="0" />
    <param name="poz_theta" value="90" />
    <node pkg="coords_sender" type="goal_sender_simple" respawn="false" name="goal_sender_simple" output="screen"/>
  </group>
  <!-- BEGIN PIONEER 2 -->
  <group ns="pioneer2">
    <param name="poz_x" value="-2" />
    <param name="poz_y" value="0" />
    <param name="poz_theta" value="90" />
    <node pkg="coords_sender" type="goal_sender_simple" respawn="false" name="goal_sender_simple" output="screen"/>
  </group>
</launch>

  


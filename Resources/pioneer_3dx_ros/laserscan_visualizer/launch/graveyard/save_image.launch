<?xml version="1.0"?>
<launch>

  <arg name="pioneer_number" default="1" />

  <node pkg="rosbag" type="play" name="rosbag" required="true" args="$(find laserscan_visualizer)/2018-12-05-13-45-45.bag"/>
	<node name="each_visualizer" pkg="laserscan_visualizer" type="each_visualizer" output="screen">
    <remap from="/camera/rgb/image_raw" to="/pioneer$(arg pioneer_number)/camera/rgb/image_raw"/>
    <remap from="/scan" to="/pioneer$(arg pioneer_number)/scan"/>
    <remap from="/odom" to="/pioneer$(arg pioneer_number)/odom"/>
	</node>

</launch>


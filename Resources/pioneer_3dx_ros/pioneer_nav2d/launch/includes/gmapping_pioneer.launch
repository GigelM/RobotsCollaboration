<?xml version="1.0"?>
<launch>
  <arg name="tf_name"/>
  <arg name="scan_topic"  default="scan" />
  <arg name="base_frame"  default="base_link"/><!--default="base_footprint"-->
  <arg name="odom_frame"  default="odom"/>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="$(arg tf_name)/$(arg base_frame)"/>
    <param name="odom_frame" value="$(arg tf_name)/$(arg odom_frame)"/>
    <param name="map_frame" value="/map"/>

    <param name="map_update_interval" value="0.8"/>   <!--How long (in seconds) between updates to the map-->
    <param name="maxUrange" value="5.0"/>             <!--The maximum usable range of the laser-->
    <param name="maxRange" value="5.0"/>              <!--The maximum range of the sensor-->
    <param name="minimumScore" value="1000"/>           <!--Minimum score for considering the outcome of the scan matching good-->
    <param name="srr" value="0.01"/>
    <param name="srt" value="0.01"/>
    <param name="str" value="0.01"/>  
    <param name="stt" value="0.01"/>                  <!--param name="stt" value="0.02"/-->

    <param name="linearUpdate" value="0.5"/>          <!--Process a scan each time the robot translates this far-->
    <param name="angularUpdate" value="0.4"/>         <!--Process a scan each time the robot rotates this far-->
    <param name="temporalUpdate" value="-1.0"/>       <!--1.0 default-->

    <param name="xmin" value="-10.0"/>
    <param name="ymin" value="-10.0"/>
    <param name="xmax" value="10.0"/>
    <param name="ymax" value="10.0"/>

<!-->    
    <param name="sigma" value="0.05"/>   
    <param name="kernelSize" value="1"/> 
    <param name="lstep" value="0.1"/>
    <param name="astep" value="0.1"/>
  
    <param name="lsigma" value="0.075"/>
    <param name="ogain" value="5.0"/>
    <param name="lskip" value="0"/>

    <param name="resampleThreshold" value="0.5"/>
    <param name="particles" value="80"/>

    <param name="delta" value="0.05"/>
    <param name="llsamplerange" value="0.01"/>
    <param name="llsamplestep" value="0.01"/>
    <param name="lasamplerange" value="0.005"/>
    <param name="lasamplestep" value="0.005"/> 

<-->
<!-->    <param name="iterations" value="3"/><-->     <!--The number of iterations of the scanmatcher WIP?-->
    <remap from="scan" to="/$(arg tf_name)/scan"/>
    <remap from="/$(arg tf_name)/map" to="/map"/>
  </node>
</launch>

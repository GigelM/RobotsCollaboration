<!-- xml -->
<launch>

  <!-- Run the map server -->
  <arg name="map_name" default="gabi_finish"/>
  <param name="/use_sim_time" value="true"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find pioneer_gazebo)/map/$(arg map_name).yaml" >
    <param name="frame_id" value="/map" />
  </node>

<group ns="robot1">
    <arg name="_robot_name"  value="robot1" />
    <arg name="_tf_robot" value="$(arg _robot_name)" /> 
    <param name="tf_prefix" type="string" value="$(arg _tf_robot)"/>
    <param name="amcl/initial_pose_x" value="2.0" />
    <param name="amcl/initial_pose_y" value="3.0" />
    <param name="amcl/initial_pose_a" value="1.23" />

    <include file="$(find multi_robot)/launch/move_base.launch">
     <arg name="robot_name" value="$(arg _robot_name)"/>
     <arg name="tf_robot" value="$(arg _tf_robot)" /> 
    </include>
    
    <node pkg="simple_navigation_goals" type="map_navigation_client" name="map_goal_client" output="screen"/>
    <node pkg="simple_navigation_goals" type="base_link_navigation_client" name="base_link_goal_client" output="screen"/>
  
  </group>
  
  <group ns="robot2">
    <arg name="_robot_name"  value="robot2" />
    <arg name="_tf_robot" value="$(arg _robot_name)" /> 
    <param name="tf_prefix" type="string" value="$(arg _tf_robot)"/>
    <param name="amcl/initial_pose_x" value="4.0" />
    <param name="amcl/initial_pose_y" value="0.0" />
    <param name="amcl/initial_pose_a" value="3.14" />  

    <include file="$(find multi_robot)/launch/move_base.launch">
     <arg name="robot_name" value="$(arg _robot_name)"/>
     <arg name="tf_robot" value="$(arg _tf_robot)" /> 
    </include>
    <node pkg="simple_navigation_goals" type="map_navigation_client" name="map_goal_client" output="screen"/>
    <node pkg="simple_navigation_goals" type="base_link_navigation_client" name="base_link_goal_client" output="screen"/>
   
</group>

</launch>

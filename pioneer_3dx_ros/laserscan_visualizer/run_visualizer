#!/bin/bash
 
my_pid=$$
echo "My process ID is $my_pid"

echo "Starting the laserscan visualization node"
for i in `seq 1 1`;
do
  roslaunch laserscan_visualizer laser_listener.launch pioneer_number:=$i &
  pid="$pid $!"
  sleep 5s
done

trap "echo Killing all processes.; kill -2 TERM $pid; exit" SIGINT SIGTERM

sleep 24h
